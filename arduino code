// Array of all bitmaps for convenience. (Total bytes used to store images in PROGMEM = 1040)
const int epd_bitmap_allArray_LEN = 1;
const unsigned char* epd_bitmap_allArray[1] = {
	epd_bitmap_boostguage
};


// Potentiometer now on A1
const uint8_t POT_PIN = A1;

void setup() {
  u8g2.begin();
}

void loop() {
  // 1) Read pot on A1 (0–1023)
  int raw = analogRead(POT_PIN);

  // 2) Map to 5–15 PSI
  int psi = map(raw, 0, 1023, 5, 15);

  // 3) Draw gauge background
  u8g2.clearBuffer();
  u8g2.drawXBMP(0, 0, 128, 64, epd_bitmap_boostguage);

  // 4) Overlay boost reading
  u8g2.setFont(u8g2_font_fub14_tr);  // ~14 px tall
  u8g2.setDrawColor(1);

  // Build string “<num> psi”
  char buf[8];
  snprintf(buf, sizeof(buf), "%d PSI", psi);

  // Position it lower-left
  u8g2.setCursor(0, 62);
  u8g2.print(buf);

  // 5) Send to display
  u8g2.sendBuffer();

  delay(100);
}

