// Pin definitions
const uint8_t POT_PIN = A1;    // pot wiper → 5–15 PSI set-point
const uint8_t MAP_PIN = A0;    // MAP sensor out (0.045–5 V)
const uint8_t SOL_PIN = 9;     // MOSFET gate → 3-port solenoid

// ADC & conversion constants
const float VCC         = 5.0f;
const float ADC_MAX     = 1023.0f;
const float BAR_TO_PSI  = 14.5038f;   // 1 bar = 14.5038 PSI

// Sensor calibration (–1 bar @ 0.045 V; +2 bar @ 5.000 V)
const float SENSOR_VMIN      = 0.045f;
const float SENSOR_VMAX      = 5.0f;
const float SENSOR_PMIN_BAR  = -1.0f;
const float SENSOR_PMAX_BAR  =  2.0f;
const float SENSOR_SLOPE     = (SENSOR_VMAX - SENSOR_VMIN) / (SENSOR_PMAX_BAR - SENSOR_PMIN_BAR);
const float SENSOR_INTERCEPT = SENSOR_VMIN - SENSOR_SLOPE * SENSOR_PMIN_BAR;

// Bar-fill scaling
const int BAR_SCALE_MAX_PSI = 20;    // treat 20 PSI as “full” on the bar

// Bar graphic parameters
const uint8_t BAR_X      = 6;
const uint8_t BAR_Y      = 16;
const uint8_t BAR_MAX_W  = 116;
const uint8_t BAR_HEIGHT = 8;

void setup() {
  u8g2.begin();
  pinMode(SOL_PIN, OUTPUT);
  analogWrite(SOL_PIN, 0);  // start solenoid off
}

void loop() {
  // [1] Read pot → desired boost (5–15 PSI)
  int rawPot = analogRead(POT_PIN);
  int psiSet = map(rawPot, 0, 1023, 5, 15);

  // [2] Read MAP sensor → voltage
  int rawMap = analogRead(MAP_PIN);
  float Vout = rawMap * (VCC / ADC_MAX);

  // → pressure in bar
  float pressureBar = (Vout - SENSOR_INTERCEPT) / SENSOR_SLOPE;
  // → pressure in PSI
  float psiMapF = pressureBar * BAR_TO_PSI;
  // clamp to physical limits
  psiMapF = constrain(psiMapF,
                      SENSOR_PMIN_BAR * BAR_TO_PSI,
                      SENSOR_PMAX_BAR * BAR_TO_PSI);
  // round to int
  int psiMap = (psiMapF >= 0)
               ? int(psiMapF + 0.5f)
               : int(psiMapF - 0.5f);

  // [3] Regulate solenoid via PWM
  float error = float(psiSet - psiMap);
  int duty = constrain(int((error / 15.0f) * 255.0f), 0, 255);
  analogWrite(SOL_PIN, duty);

  // [4] Draw to OLED
  u8g2.clearBuffer();
  u8g2.drawXBMP(0, 0, 128, 64, epd_bitmap_boostguage);

  // fill-bar: 0–20 PSI → 0–116 px
  int barW = 0;
  if (psiMap > 0) {
    int p = constrain(psiMap, 0, BAR_SCALE_MAX_PSI);
    barW = map(p, 0, BAR_SCALE_MAX_PSI, 0, BAR_MAX_W);
  }
  u8g2.drawBox(BAR_X, BAR_Y, barW, BAR_HEIGHT);

  // set-point text (lower-left)
  u8g2.setFont(u8g2_font_fub11_tr);
  u8g2.setCursor(0, 62);
  u8g2.print(psiSet);
  u8g2.print(" PSI");

  // actual PSI text (lower-right)
  char buf[12];
  snprintf(buf, sizeof(buf), "%d PSI", psiMap);
  uint8_t tw = u8g2.getUTF8Width(buf);
  u8g2.setCursor(128 - tw, 62);
  u8g2.print(buf);

  u8g2.sendBuffer();
  delay(100);
}
